<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000">
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="66.6dp"
        android:gravity="center"
        android:text="用户服务协议"
        android:textColor="#FFFFFF"
        android:textSize="21.3sp"
        android:background="#212121"/>
    <!-- <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:paddingLeft="106.6dp"
        android:paddingRight="106.6dp">  -->
    <WebView 
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:id="@+id/user_service_protocal_webview"
        android:background="#000000"   
        />
   <!--  </LinearLayout> -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="26.6dp"
        >
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="107.3dp"
            android:id="@+id/choose_user_service"
            style="@style/CustomCheckboxTheme"
            android:checked="true"
            android:layout_gravity="center_vertical"/>"
        <LinearLayout 
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="13.3dp">
            <TextView 
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="我已仔细阅读、同意并接受此协议"
                android:textColor="#999999"
                android:textSize="20sp"/>
             <View 
                android:layout_width="300dp"
                android:layout_height="1dp"
                android:background="#999999"/>    
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/accept_user_service"
        android:layout_width="173.3dp"
        android:layout_height="44dp"       
        android:background="@drawable/settings_button_border1"    
        android:text="接受"
        android:textColor="#ffffff"
        android:textSize="18.6sp" 
        android:clickable="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="26.6dp"/>   
</LinearLayout>