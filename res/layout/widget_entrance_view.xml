<?xml version="1.0" encoding="utf-8"?>
<com.btime.launcher.widget.entrance.EntranceView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/widget_entrance_base"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/widget_entrance_bg" >

        <ImageView
            android:id="@+id/widget_entrance_icon"
            android:layout_width="@dimen/widget_entrance_icon_width"
            android:layout_height="@dimen/widget_entrance_icon_height"
            android:layout_marginTop="@dimen/widget_entrance_icon_margin_top"
            android:layout_marginBottom="@dimen/widget_entrance_icon_margin_bottom"
            android:layout_centerHorizontal="true"
            android:contentDescription="@null"
            android:src="@drawable/ic_launcher_home" />
        
        <TextView
            android:id="@+id/widget_entrance_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/widget_entrance_icon"
            android:textColor="@color/widget2x3_name_text"
            android:textSize="@dimen/widget_entrance_label_text"
            android:text="@string/widget_name_setting2x3" />
    </RelativeLayout>

</com.btime.launcher.widget.entrance.EntranceView>