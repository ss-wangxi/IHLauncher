<?xml version="1.0" encoding="utf-8"?>
<cc.snser.launcher.screens.DeleteZone xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/delete_zone"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/delete_zone_size"
    android:layout_gravity="top"
    android:gravity="center"
    android:scaleType="center"
    android:visibility="gone">
    <cc.snser.launcher.ui.components.LineView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/delete_zone_lineview" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/delete_zone_size"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/delete_zone_layout"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/delete_zone_padding_bottom" >

        <com.shouxinzm.launcher.view.TextView
            android:id="@+id/delete_zone_trash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="4dip"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:textSize="17sp" />

    </LinearLayout>

</cc.snser.launcher.screens.DeleteZone>