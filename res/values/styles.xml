<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="Theme" parent="@android:style/Theme.Wallpaper">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.NoBackground" parent="android:Theme">
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="Theme.NoBackground.NoTitleBar" parent="Theme.NoBackground">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.Translucent.NoTitleBar" parent="@android:style/Theme.Translucent.NoTitleBar">
    </style>

    <style name="WorkspaceIcon">
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/workspace_icon_padding_left</item>
        <item name="android:paddingRight">@dimen/workspace_icon_padding_right</item>
        <item name="android:drawablePadding">@dimen/workspace_icon_drawable_padding</item>
    </style>

    <style name="BubbleTextView" parent="WorkspaceIcon">
        <item name="android:paddingTop">@dimen/workspace_icon_padding_top</item>
        <item name="android:layout_marginLeft">@dimen/workspace_icon_layout_margin_left</item>
        <item name="android:layout_marginTop">@dimen/workspace_icon_layout_margin_top</item>
        <item name="android:layout_marginRight">@dimen/workspace_icon_layout_margin_right</item>
        <item name="android:layout_marginBottom">@dimen/workspace_icon_layout_margin_bottom</item>
    </style>

    <style name="Theme.CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <style name="LoadMoreProgressBar" parent="@android:style/Widget.ProgressBar.Small">
    </style>
    <style name="ThemeTitleBar" />

    
    <style name="ThemeList" />
    
    <style name="ThemeList.Container">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>
    
    <style name="ThemeList.ThemeName">
        <item name="android:layout_marginTop">3dip</item>
        <item name="android:layout_marginBottom">1dip</item>
        <item name="android:paddingLeft">7dip</item>
        <item name="android:paddingRight">7dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">10.5sp</item>
    </style>

    <style name="ThemeList.ThemeDesc">
        <item name="android:layout_marginTop">0dip</item>
        <item name="android:layout_marginBottom">1dip</item>
        <item name="android:paddingLeft">7dip</item>
        <item name="android:paddingRight">7dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#878787</item>
        <item name="android:textSize">9sp</item>
    </style>
    <style name ="CustomCheckboxTheme" parent = "@android:style/Widget.CompoundButton.CheckBox">
        <item name = "android:button">@drawable/btn_checkbox_selector</item>
    </style>
</resources>