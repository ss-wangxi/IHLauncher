<?xml version="1.0" encoding="utf-8"?>  
<resources>  
    <attr name="ivp_type">  
        <enum name="none" value="0" />  
        <enum name="circle" value="1" />  
        <enum name="rounded_rect" value="2" />
    </attr>
    <attr name="ivp_borderColor" format="color" />
    <attr name="ivp_borderWidth" format="dimension" />
    <attr name="ivp_rectRoundRadius" format="dimension" />

    <declare-styleable name="ImageViewPlus">  
        <attr name="ivp_type" />
        <attr name="ivp_borderColor" />
        <attr name="ivp_borderWidth" />
        <attr name="ivp_rectRoundRadius" />
    </declare-styleable>
</resources>  